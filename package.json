{
  "name": "qw-blog",
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env ELECTRON=true vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:electron": "cross-env ELECTRON=true vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .vue,.ts src --fix",
    "electron": "electron .",
    "electron:dev": "cross-env ELECTRON=true vite",
    "electron:build": "cross-env ELECTRON=true npm run build && electron-builder",
    "electron:build:win": "cross-env ELECTRON=true npm run build && electron-builder --win",
    "electron:build:mac": "cross-env ELECTRON=true npm run build && electron-builder --mac",
    "electron:build:linux": "cross-env ELECTRON=true npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@bytemd/plugin-gfm": "^1.22.0",
    "@bytemd/plugin-highlight": "^1.22.0",
    "@bytemd/plugin-math": "^1.22.0",
    "@bytemd/vue-next": "^1.22.0",
    "@kangc/v-md-editor": "^2.3.18",
    "@types/crypto-js": "^4.1.1",
    "@vueuse/core": "^10.0.0",
    "axios": "^1.6.2",
    "crypto-js": "^4.1.1",
    "highlight.js": "^11.11.1",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "marked": "^16.1.1",
    "mavon-editor": "^2.10.4",
    "md-editor-v3": "^5.8.2",
    "monaco-editor-vue3": "^0.1.10",
    "naive-ui": "^2.34.3",
    "pinia": "^2.1.4",
    "prismjs": "^1.30.0",
    "qrcode": "^1.5.4",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.5",
    "@unocss/preset-icons": "^0.57.0",
    "@unocss/preset-wind": "^0.57.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-typescript": "^11.0.3",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "prettier": "^3.0.3",
    "typescript": "^5.3.3",
    "unocss": "^0.57.0",
    "vite": "^5.0.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^1.8.20"
  },
  "build": {
    "appId": "com.qianhu.qw-blog",
    "productName": "QW Blog - Git管理工具",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "mac": {
      "icon": "public/favicon.ico",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "linux": {
      "icon": "public/favicon.ico",
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}_${version}.${ext}"
    }
  }
}
